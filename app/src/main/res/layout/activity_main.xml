<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_50sdp"
            android:textSize="@dimen/_25sdp"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/_20sdp"
            android:textColor="@color/purple_700"
            android:text="Math Puzzles"
            android:textAlignment="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@drawable/blackboard_main_menu"
        android:orientation="vertical"
        android:layout_marginHorizontal="@dimen/_10sdp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CONTINUE"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="@dimen/_25sdp"
            android:layout_margin="@dimen/_10sdp"
            android:id="@+id/continue_txt"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PUZZLES"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="@dimen/_25sdp"
            android:id="@+id/puzzle_txt"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BUY PRO"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="@dimen/_25sdp"
            android:layout_margin="@dimen/_10sdp"
            android:id="@+id/buy_txt"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:layout_marginLeft="@dimen/_200sdp">
            <Button
                android:layout_width="@dimen/_42sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@drawable/circle"
                app:backgroundTint="@null"
                android:id="@+id/share_button"
                />
            <Button
                android:layout_width="@dimen/_42sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/mail_client"
                app:backgroundTint="@null"
                android:scaleX=""
                android:id="@+id/mail_button"
                android:layout_margin="@dimen/_13sdp"
                android:layout_toRightOf="@id/share_button"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PRIVACY POLICY"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp"
                android:id="@+id/privete_txt"
                android:layout_below="@id/share_button"
                android:background="@drawable/border"
                android:layout_margin="@dimen/_7sdp"

                />


        </RelativeLayout>
    </LinearLayout>



</LinearLayout>