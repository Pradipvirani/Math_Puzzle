<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".puzzle_play_activity"
    android:orientation="vertical"
    android:background="@drawable/gameplaybackground"
    android:id="@+id/puzzle_play_activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center">
        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/skip"
            app:backgroundTint="@null"
            android:layout_weight="1.5"


            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:background="@drawable/level_board"
            android:layout_weight=".9"
            android:layout_marginTop="@dimen/_9sdp"
            android:text="Puzzle 1"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_30sdp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            app:backgroundTint="@null"
            android:layout_weight="1.5"
            android:background="@drawable/hint"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".5"
        android:layout_marginTop="@dimen/_10sdp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/puzzle_imageview"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"></LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black">

        <TextView
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_30sdp"
            android:textSize="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/_5sdp"
            android:id="@+id/answer_txt"
            android:background="@color/white"/>
            <Button
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_40sdp"
                android:id="@+id/delete_button"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:background="@drawable/delete"
                app:backgroundTint="@null"
                android:layout_marginTop="@dimen/_5sdp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp"
                android:id="@+id/submit_button"
                android:backgroundTint="@color/black"
                android:text="SUBMIT"
                android:layout_marginTop="@dimen/_5sdp"
                />
</LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:layout_weight="1">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:layout_weight="1"
                    android:backgroundTint="#817D7D"
                    android:id="@+id/btn1"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:layout_weight="1"
                    android:backgroundTint="#817D7D"
                    android:id="@+id/btn2"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:layout_weight="1"
                    android:backgroundTint="#817D7D"
                    android:id="@+id/btn3"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:layout_weight="1"
                    android:backgroundTint="#817D7D"
                    android:id="@+id/btn4"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:layout_weight="1"
                    android:backgroundTint="#817D7D"
                    android:id="@+id/btn5"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:layout_weight="1"
                    android:backgroundTint="#817D7D"
                    android:id="@+id/btn6"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:layout_weight="1"
                    android:backgroundTint="#817D7D"
                    android:id="@+id/btn7"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:layout_weight="1"
                    android:backgroundTint="#817D7D"
                    android:id="@+id/btn8"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9"
                    android:layout_weight="1"
                    android:backgroundTint="#817D7D"
                    android:id="@+id/btn9"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_weight="1"
                    android:backgroundTint="#817D7D"
                    android:id="@+id/btn0"
                  />
            </LinearLayout>
</LinearLayout>